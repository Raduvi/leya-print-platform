{
    "name": "@leya-print/pdf-service",
    "version": "1.0.0",
    "description": "Service that generates PDFs using playwright with chromium",
    "main": "index.js",
    "scripts": {
        "dev": "ts-node src/server.ts",
        "prestart": "npm run build",
        "start": "node dist/launch.js",
        "build": "tsc",
        "test": "mocha -r ts-node/register src/storage/*.spec.{js,ts} --watch-files src/**/*.ts",
        "install-browser": "PLAYWRIGHT_BROWSERS_PATH=./browsers playwright install chrome"
    },
    "watch": {
        "test": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,js"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://gitlab.code-better.it/leya/leya-print"
    },
    "keywords": [
        "leya",
        "print",
        "rest",
        "pdf"
    ],
    "author": "emanuel.hein@code-better.it",
    "license": "UNLICENSED",
    "dependencies": {
        "body-parser": "^1.20.0",
        "connect-busboy": "^1.0.0",
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "i": "^0.3.7",
        "merge": "^2.1.1",
        "multer": "^1.4.5-lts.1",
        "npm": "^9.6.5",
        "playwright": "1.33",
        "recursive-copy": "^2.0.14",
        "shelljs": "^0.8.5",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/chai": "^4.3.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.1.1",
        "@types/multer": "^1.4.7",
        "@types/shelljs": "^0.8.11",
        "@types/uuid": "^8.3.4",
        "chai": "^4.3.6",
        "mocha": "^10.0.0",
        "npm-watch": "^0.11.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    }
}
